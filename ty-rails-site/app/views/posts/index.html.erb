<div class="header-wrapper">
  <div>
    <%= link_to image_tag("ty-home-image.jpg", :alt => ""), "/" %>
  </div>
</div>
<section>
  <% @posts.each do |post| %>
    <div class="index-cube-wrapper">
      <div class="cube-top-left"></div>
      <div class="cube-bottom-right"></div>
      <div class="content-cube">
        <h1><%= post.heading %></h1>
        <p><%= post.text %></p>
      </div>
    </div>
    <div class="vertical-spacer"></div>
   <% end %>
</section>
